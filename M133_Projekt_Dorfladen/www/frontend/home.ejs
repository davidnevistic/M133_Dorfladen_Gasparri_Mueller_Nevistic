<%- await include('frontend/header.ejs', { title: 'Welcome' }); %>
<%- await include('frontend/cartButton.ejs', { alleItems: alleItems}); %>
    <div>
    <% console.log("main.ejs loaded"); %>
    <% for (let i = 0; i < itemList.length; i++) {  %>
        <%# console.log("Item Name: "+itemList[i].produktName); %>
        <form action="/produkt" method="post">            
            <input type="text" name="produktID" value="<%= itemList[i].id %>" hidden>
            <button style="float: left; border: solid black; margin: 5%;" type="submit"> 
                <img src="<%= Deno.cwd() %>/assets/<%= itemList[i].imageName %>" width="200" height="200">
                <br>
                <%= itemList[i].produktName %>
                <br>
                CHF <%= itemList[i].specialOffer%>
                <del style ="color: red;"> CHF <%= itemList[i].normalPrice %></del>
            </button>
        </form>
    <% } %>
    </div>
<%- await include('frontend/footer.ejs'); %>
